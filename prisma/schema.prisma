// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  password String
  name String 
  email String @unique
  icon String
  role String @default("BASIC")
  userIDs String[] @db.ObjectId
  chats Chat[] @relation(fields: [userIDs], references: [id])
  texts Text[]

  @@unique([password, name])
  @@unique([id, icon, name])
}

model Chat {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  password String @unique
  chatsIDs String[] @db.ObjectId
  users User[] @relation(fields: [chatsIDs], references: [id])
  texts Text[]

  @@unique([name, password])
}

model Text {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  content String
  likes Int
  chat Chat @relation(fields: [chatId], references: [id])
  chatId String @db.ObjectId
  author User @relation(fields: [authorId, authorIcon, authorName], references: [id, icon, name])
  authorId String @db.ObjectId
  authorName String
  authorIcon String
}